<Shell
    x:Class="Hoplings.DriverApp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:pages="clr-namespace:Hoplings.DriverApp.Pages"
    Title="Hoplings.DriverApp"
    FlyoutBehavior="Disabled"
    Shell.TabBarBackgroundColor="#222222"
    Shell.TabBarForegroundColor="#FFFFFF"
    Shell.TabBarTitleColor="#FFFFFF"
    Shell.TabBarUnselectedColor="#888888"
    Shell.TabBarDisabledColor="#555555"
    Shell.BackgroundColor="#00FFAA">



    <TabBar>
        <Tab Title="Login" Icon="tab_login_dark.png">
            <ShellContent ContentTemplate="{DataTemplate pages:LoginPage}" Route="LoginPage" />
        </Tab>

        <Tab Title="Home" Icon="tab_home_dark.png">
            <ShellContent ContentTemplate="{DataTemplate pages:MainPage}" Route="MainPage" />
        </Tab>
    </TabBar>
</Shell>
